<%= form_for @user do |f| %>
    <%= f.label :role %><br>
    <%= f.select :role, options_for_select([["Student","student"],["Teacher","teacher"],["School Admin","admin"]], "student")%><br>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <p>This field is only necessary for Teachers and Admins:</p><br>
    <%= f.label :school_id %>
    <%= f.collection_select :school_id, School.all, :id, :name%><br>
    <%= label "Access Code", :admin_code %><br>
    <%= text_field_tag :admin_code%><br>
    <%= f.submit %>
<%end%>